@model ECommerce.Data.Models.user

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/IndexLayoutLogin.cshtml";
}

<h2>Sign in</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>user</h4>
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            <div class="control-label col-md-2"> Login</div>
            <div class="col-md-10">
                <input type="text" name="login" />
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2"> Password</div>
            <div class="col-md-10">
                <input type="password" name="password" />
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sign in" class="btn btn-default" />
            </div>
        </div>
        <p>
                @Html.ActionLink("Create an account", "Create","Users") if you are not registered yet.
            </p>
    </div>
}
